<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <corners
                android:radius="7dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#6A167B"
                android:startColor="@color/gitas_mor"
                android:endColor="#6A167B"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="100dp"
                android:height="38dp"
                />
        </shape>
    </item>
</selector>