<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/takip_orer_wrapper"
    android:orientation="vertical"
    android:background="@color/main_background"
    tools:context="com.obarey.jeppe_pc.gitasfilotakipmobil.FragmentTakipMesaj">


    <TextView
        android:id="@+id/otobus_takip_fragment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/otobus_takip_fragment_header"
        android:textAlignment="center"
        android:layout_margin="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:weightSum="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/mesajlar_listview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0.95"
            />

        <Button android:layout_width="110dp"
            android:layout_height="0dp"
            android:textColor="@color/gitas_action_bar_text_color"
            android:id="@+id/btn_download_daha_eski"
            android:background="@drawable/gbtn"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="@string/daha_fazla"
            android:layout_weight="0.05"/>

    </LinearLayout>


</LinearLayout>
