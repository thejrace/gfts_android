<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="11.5"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lw_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/sefer_row_text_style" />


    <TextView
        android:id="@+id/lw_hat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/sefer_row_text_style" />


    <TextView
        android:id="@+id/lw_orer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/sefer_row_text_style" />

    <TextView
        android:id="@+id/lw_gidis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/sefer_row_text_style" />

    <TextView
        android:id="@+id/lw_bitis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/sefer_row_text_style" />



    <TextView
        android:id="@+id/lw_surucu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/sefer_row_surucu_text_style" />

    <TextView
        android:id="@+id/lw_tamamlanma_suresi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/sefer_row_text_style" />

    <TextView
        android:id="@+id/lw_durum_kodu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textAppearance="@style/sefer_row_text_style" />

</LinearLayout>