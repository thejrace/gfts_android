<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_background"
    tools:context="com.obarey.jeppe_pc.gitasfilotakipmobil.ActivityOtobusTakip">

    <FrameLayout
        android:id="@+id/otobus_takip_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/main_background_lighter"
        app:itemTextColor="@color/main_background"
        app:itemBackground="@drawable/sefer_ozet_box_tamam"
        app:menu="@menu/navigation" />

</LinearLayout>
